<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:maxWidth="400dp"
    android:maxHeight="250dp">

    <ImageView
        android:id="@+id/popup_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_companyName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light"
            android:textStyle="bold"
            tools:text="This is my long long company name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/popup_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_24"
                android:tint="@android:color/secondary_text_light"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="215dp" />

            <ImageView
                android:id="@+id/popup_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_24"
                android:tint="@android:color/secondary_text_light"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="215dp" />

            <ImageView
                android:id="@+id/popup_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_24"
                android:tint="@android:color/secondary_text_light"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="215dp" />

            <ImageView
                android:id="@+id/popup_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_24"
                android:tint="@android:color/secondary_text_light"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="215dp" />

            <ImageView
                android:id="@+id/popup_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_24"
                android:tint="@android:color/secondary_text_light"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="215dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>