<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seats"
                android:textAlignment="center"
                android:textColor="@android:color/secondary_text_light" />

            <TextView
                android:id="@+id/popup_remainingSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="2/4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_carpoolName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/secondary_text_light"
                android:textStyle="bold"
                tools:text="Very very long Username - 2001ABC" />

            <TextView
                android:id="@+id/popup_restrictions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/secondary_text_light"
                tools:text="No es pot fumar dins del vehicle abc wdqkjn qwdkl" />

            <TextView
                android:id="@+id/popup_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/secondary_text_light"
                tools:text="Acostumo a conduir bastant rÃ pid" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/carpool_start"
            android:textColor="@android:color/secondary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popup_startText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light"
            tools:text="2022-01-20 12:00:00" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carpool_destination"
        android:textColor="@android:color/secondary_text_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/popup_destinationText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/secondary_text_light"
        tools:text="Estadi Montilivi, Avinguda de Montilivi, 141, 17003 Girona" />

</LinearLayout>